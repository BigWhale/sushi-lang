# TEST_TYPE: runtime
# EXPECT_RUNTIME_EXIT: 0
# EXPECT_STDOUT_CONTAINS: All integer types work

fn run_test() i32:
    let string[] arr = from(["hello", "world"])

    # Test that all integer types work as array indices
    let i8 i8_idx = 0 as i8
    let i16 i16_idx = 1 as i16
    let u8 u8_idx = 0 as u8
    let u16 u16_idx = 1 as u16

    print("Testing integer types as indices:")
    print(arr.get(i8_idx)??)
    print(arr.get(i16_idx)??)
    print(arr.get(u8_idx)??)
    print(arr.get(u16_idx)??)
    print("All integer types work as indices")

    return Result.Ok(0)

fn main() i32:
    let i32 result = run_test().realise(99)
    return Result.Ok(result)
