use <collections/strings>

fn main() i32:
    # Test 1: ASCII uppercase to lowercase
    let string s1 = "HELLO"
    let string r1 = s1.lower()
    println(r1)

    # Test 2: Mixed case to lowercase
    let string s2 = "HeLLo WoRLd"
    let string r2 = s2.lower()
    println(r2)

    # Test 3: Already lowercase
    let string s3 = "hello"
    let string r3 = s3.lower()
    println(r3)

    # Test 4: With numbers and punctuation
    let string s4 = "HELLO123WORLD!"
    let string r4 = s4.lower()
    println(r4)

    # Test 5: Empty string
    let string s5 = ""
    let string r5 = s5.lower()
    println(r5)

    # Test 6: Single character uppercase
    let string s6 = "A"
    let string r6 = s6.lower()
    println(r6)

    # Test 7: Single character lowercase
    let string s7 = "z"
    let string r7 = s7.lower()
    println(r7)

    # Test 8: UTF-8 characters (should remain unchanged - ASCII only)
    let string s8 = "CAFÉ"
    let string r8 = s8.lower()
    println(r8)

    return Result.Ok(0)

# Expected output:
# hello
# hello world
# hello
# hello123world!
#
# a
# z
# cafÉ
