# Comprehensive math module test
use <math>

fn main() i32:
    println("=== Math Module Comprehensive Test ===")
    println("")

    # Test constants
    println("Constants:")
    println("  PI  = {PI}")
    println("  E   = {E}")
    println("  TAU = {TAU}")
    println("")

    # Test abs
    println("abs() function:")
    let i32 neg = -42
    let i32 pos = abs(neg)
    println("  abs(-42) = {pos}")

    let f64 neg_float = -3.14
    let f64 pos_float = abs(neg_float)
    println("  abs(-3.14) = {pos_float}")
    println("")

    # Test min/max
    println("min() and max() functions:")
    let i32 a = 10
    let i32 b = 20
    println("  min(10, 20) = {min(a, b)}")
    println("  max(10, 20) = {max(a, b)}")

    let f64 x = 3.14
    let f64 y = 2.71
    println("  min(3.14, 2.71) = {min(x, y)}")
    println("  max(3.14, 2.71) = {max(x, y)}")
    println("")

    # Test sqrt
    println("sqrt() function:")
    println("  sqrt(16.0) = {sqrt(16.0)}")
    println("  sqrt(2.0) = {sqrt(2.0)}")
    println("")

    # Test pow
    println("pow() function:")
    println("  pow(2.0, 10.0) = {pow(2.0, 10.0)}")
    println("  pow(3.0, 3.0) = {pow(3.0, 3.0)}")
    println("")

    # Test floor/ceil/round/trunc
    println("Rounding functions:")
    println("  floor(3.7) = {floor(3.7)}")
    println("  ceil(3.7) = {ceil(3.7)}")
    println("  round(3.7) = {round(3.7)}")
    println("  trunc(3.7) = {trunc(3.7)}")
    println("")

    # Test with PI
    println("Using PI:")
    let f64 radius = 5.0
    let f64 area = PI * pow(radius, 2.0)
    println("  Circle area (r=5) = {area}")
    println("")

    println("=== All Tests Completed Successfully ===")

    return Result.Ok(0)
