# TEST_TYPE: runtime
# EXPECT_RUNTIME_EXIT: 0
# Explicit casts between float types should pass
fn main() i32:
  let f32 x = 3.14 as f32
  let f64 y = 2.718

  # Cast f32 to f64 for comparison
  if ((x as f64) > y):
    # f64 arithmetic works correctly
    let f64 sum = (x as f64) + y
    if (sum > 5.8 and sum < 5.9):
      return Result.Ok(0)

  return Result.Ok(1)
