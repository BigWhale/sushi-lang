fn main() i32:
  let i32 a = 42
  let i16 b = 100 as i16

  # Cast i16 to i32 for comparison
  if (a < (b as i32)):
    # Cast i16 to i32 for arithmetic
    let i32 result = a + (b as i32)
    if (result == 142):
      return Result.Ok(0)

  return Result.Ok(1)
