# TEST_TYPE: runtime
# EXPECTED_OUTPUT: H
# EXPECTED_OUTPUT: Done

use <io/stdio>
use <io/files>

fn main() i32:
    # Write test file
    let FileResult write_result = open("test_readch_simple.txt", FileMode.Write())
    match write_result:
        FileResult.Ok(out) ->
            out.write("H")
            out.close()
        FileResult.Err(_) ->
            stderr.write("Error: cannot create test file\n")
            return Result.Err(StdError.Error)

    # Read file character by character using readch()
    let FileResult read_result = open("test_readch_simple.txt", FileMode.Read())
    match read_result:
        FileResult.Ok(f) ->
            let string ch = f.readch()
            println(ch)
            f.close()
            println("Done")
            return Result.Ok(0)
        FileResult.Err(_) ->
            stderr.write("Error: cannot read test file\n")
            return Result.Err(StdError.Error)

    return Result.Ok(0)
