# Test comparison operators in constant expressions
# EXPECT_RUNTIME_EXIT: 0
# EXPECT_STDOUT_CONTAINS: "All constant comparison tests passed"

const bool EQ_TRUE = 10 == 10
const bool EQ_FALSE = 10 == 20
const bool NEQ_TRUE = 10 != 20
const bool NEQ_FALSE = 10 != 10

const bool LT_TRUE = 10 < 20
const bool LT_FALSE = 20 < 10
const bool LTE_TRUE_LT = 10 <= 20
const bool LTE_TRUE_EQ = 10 <= 10
const bool LTE_FALSE = 20 <= 10

const bool GT_TRUE = 20 > 10
const bool GT_FALSE = 10 > 20
const bool GTE_TRUE_GT = 20 >= 10
const bool GTE_TRUE_EQ = 10 >= 10
const bool GTE_FALSE = 10 >= 20

const bool NEG_CMP = -10 < 0
const bool FLOAT_CMP = 3.14 > 3.0

const i32 A = 100
const i32 B = 50
const bool IS_LARGE = A > B
const bool IS_EQUAL = A == A
const bool IS_DIFFERENT = A != B

fn main() i32:
    # Verify comparison results
    if (not EQ_TRUE):
        return Result.Err(StdError.Error)
    if (EQ_FALSE):
        return Result.Err(StdError.Error)
    if (not NEQ_TRUE):
        return Result.Err(StdError.Error)
    if (NEQ_FALSE):
        return Result.Err(StdError.Error)

    if (not LT_TRUE):
        return Result.Err(StdError.Error)
    if (LT_FALSE):
        return Result.Err(StdError.Error)
    if (not LTE_TRUE_LT):
        return Result.Err(StdError.Error)
    if (not LTE_TRUE_EQ):
        return Result.Err(StdError.Error)
    if (LTE_FALSE):
        return Result.Err(StdError.Error)

    if (not GT_TRUE):
        return Result.Err(StdError.Error)
    if (GT_FALSE):
        return Result.Err(StdError.Error)
    if (not GTE_TRUE_GT):
        return Result.Err(StdError.Error)
    if (not GTE_TRUE_EQ):
        return Result.Err(StdError.Error)
    if (GTE_FALSE):
        return Result.Err(StdError.Error)

    if (not NEG_CMP):
        return Result.Err(StdError.Error)
    if (not FLOAT_CMP):
        return Result.Err(StdError.Error)

    if (not IS_LARGE):
        return Result.Err(StdError.Error)
    if (not IS_EQUAL):
        return Result.Err(StdError.Error)
    if (not IS_DIFFERENT):
        return Result.Err(StdError.Error)

    println("All constant comparison tests passed")
    return Result.Ok(0)
