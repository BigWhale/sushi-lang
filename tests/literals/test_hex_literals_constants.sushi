# Test hex literals in constants

const i32 HEX_CONST = 0xDEADBEEF
const i32 MASK = 0xFF
const i32 ZERO_HEX = 0x0

fn main() i32:
    let i32 a = HEX_CONST
    let i32 b = MASK
    let i32 d = ZERO_HEX

    # Use constants in expressions
    let i32 result = a & MASK
    let bool check = b == 0xFF

    if (check):
        println("Mostly Harmless")
    return Result.Ok(result + d)
