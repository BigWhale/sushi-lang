# Automatically activate uv virtual environment
export VIRTUAL_ENV=.venv
PATH_add .venv/bin

# Set LLVM 20 paths (macOS with Homebrew)
if [[ -d "/opt/homebrew/opt/llvm@20" ]]; then
    PATH_add /opt/homebrew/opt/llvm@20/bin
    export LLVM_CONFIG="/opt/homebrew/opt/llvm@20/bin/llvm-config"
    export LDFLAGS="-L/opt/homebrew/opt/llvm@20/lib"
    export CPPFLAGS="-I/opt/homebrew/opt/llvm@20/include"
fi

# Set LLVM 20 paths (Linux)
if [[ -d "/usr/lib/llvm-20" ]]; then
    PATH_add /usr/lib/llvm-20/bin
    export LLVM_CONFIG="/usr/lib/llvm-20/bin/llvm-config"
fi
